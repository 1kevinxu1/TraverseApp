<form class="edit-profile-form" action="" method="post">
  <div id="profile-header" class="container-fluid profile profile-header">
    <h1><%= user.get("name") %>, <%= user.get("age") %></h1>
    <input name="profile[hometown]"
           value="<%= user.get("hometown") && user.get("hometown").city %>">
  </div>


  <div id="profile-content" class="profile">
    <div id="about-me" class="profile-blurb">
      <h3>About Me</h3>
      <textarea name="profile[about_blurb]"><%= user.escape("about_blurb") %></textarea>
    </div>
    <div id="about-me" class="profile-blurb">
      <h3>One Crazy Story About Me</h3>
      <textarea name="profile[story_blurb]" rows="8" cols="40"><%= user.escape("story_blurb") %></textarea>
    </div>
    <div id="about-me" class="profile-blurb">
      <h3>When I travel, I like to...</h3>
      <textarea name="profile[travel_blurb]" rows="8" cols="40"><%= user.escape("travel_blurb") %></textarea>
    </div>
  </div>
</form>
<button id="save-profile" class="btn btn-success btn-block no-border-radius">
  Save Profile
</button>
