input[type="date"]::-webkit-inner-spin-button{
  -webkit-appearance: none;
}

input {
  outline: none;
}

button:focus {
  outline:0 !important;
}

#mainview {
  padding: 10px;
}

 @import url(http://fonts.googleapis.com/css?family=Lato:300,400,700,900);
 @import "bootstrap-sprockets";
 @import "bootstrap";

 body {
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  background: #F4F4F4;
  color: #1A2A37;
 }

 .content-header{
   padding: 0px;
   margin: 0px 0px 10px;
   border-bottom: 2px solid #000;
 }

 .content-header > h3 {
   margin: 0px 0px 10px;
 }

 @import "trips_index.scss";
 @import "tag_it.css";
 @import "user_profile.scss";
 @import "header.scss";

 #lean_overlay {
     position: fixed;
     z-index:100;
     top: 0px;
     left: 0px;
     height:100%;
     width:100%;
     background: #000;
     display: none;
 }

.pac-container{
  position: fixed !important;
  z-index: 110001 !important;
}

.my-modal {
  background-color: white;
  position: absolute;
  border-radius: 3px;
  padding: 15px;
  color: #1C1C38;
}

.my-modal h3, .my-modal input {
  margin: 10px;
  font-weight: 400;
  text-shadow: none;
}

.my-modal input {
  height: 30px;
  border: none;
  border-bottom: 1px solid #222;
  outline: none;
  width: 260px;
}

.my-modal #birthday {
  padding: 0px;
  width: 202px;
  margin-left: 3px;
  margin-right: 3px;
  color: grey;
}

.my-modal label {
  padding: 0px;
  font-weight: 400;
}

.my-modal button {
  background-color: #ddd;
  border: 1px solid #ccc;
  transition: all .3s ease;
  margin-top: 5px;
}

.my-modal button:hover {
  background-color: #eee;
  border: 1px solid #ddd;
}

.my-modal ul {
  text-align: left;
  font-weight: 300;
  color: red;
  list-style-type: none;
  padding: 0px;
  font-size: 12px;
}

.user-portal-button {
  margin: 20px 20px 0px 0px;
  transition: all .3s ease;
}

#log-in-button{
  background: none;
  border: 1px solid white;
  text-shadow: 0px 0px 2px black;
}

#log-in-button:hover {
  background: rgba(59, 89, 152, .7);
  border: 1px solid rgba(100,100,100,.7);
  text-shadow: none;
  color: #eee;
}

#sign-up-button{
  background: #eee;
  border: 1px solid #999;
  text-shadow: none;
  color: #888;
}

#sign-up-button:hover {
  background: rgba(200,200,200,.7);
  color: #111;
}

.jumbotron {
  background-image: url("<%=image_path("jumbotron-background.jpg") %>");
  text-shadow: 1px 1px 2px #333;
  height: 550px;
  background-position: center;
  position: relative;
  padding: 0px;
  margin-bottom: 0px;
}

.jumbotron > .container {
  padding-top: 150px;
  color: #ddd;
}

.jumbotron h1 {
  text-weight: 900;
}

.jumbotron h4 {
  text-weight: 400;
  text-shadow: 0px 0px 1px #000;
}

.jumbotron p {
  text-shadow: 0px 0px 2px #000;
}

#jumbotron-button {
  background-color: rgba(235, 235, 235, 0.5);
  color: #eee;
  padding: 5px 15px;
  font-size: 15px;
  text-weight: 900;
  text-shadow: 0px 0px 1px #000;
  min-width: 0px;
  border-radius: 2px;
  border: 1px solid rgba(175, 175, 175, 0.5);
  text-shadow: 0px 0px 1px solid rgba(25, 25, 25, 0.7);
  transition: all .3s ease;
}

#jumbotron-button:hover {
  background-color: rgba(25, 25, 25, 0.7);
  border: 1px solid rgba(35, 35, 35, 0.7);
  color: #eee;
}

.group:after {
   content: "";
   display: block;
   clear: both;
}

.center-text {
  text-align: center;
}

.placeholder {
  background-color: #ccc;
  height: 202px;
  width: 300px;
  float:left;
}

#center-content {
  background-color: black;
}

body {
  background: #F4F4F4;
}
